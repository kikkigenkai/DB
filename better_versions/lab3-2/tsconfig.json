{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules"]
}